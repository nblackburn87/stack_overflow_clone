<%= render 'layouts/errors', object: @question %>
<%= form_for @question do |f| %>
  <div class="form-group">
    <%= f.label :question %>
    <%= f.text_area :question, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", :class => 'btn btn-info' %>
  </div>

<% end %>

